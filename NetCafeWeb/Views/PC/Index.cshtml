@{
    ViewBag.Title = "PC Management";
    List<NetCafe> netcafes = ViewBag.netcafes;
    List<PC> pcs = ViewBag.pcs;
    String isAdmin = ViewBag.isAdmin;
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<p></p>

<!--Set size of datatable -->
<script type="text/javascript">
    $(function () {
        $("#PC_table").dataTable({
            "iDisplayLength": 100,
        });
    });
</script>

<div class="container">
    
   @{
        if (netcafes == null || netcafes.Count == 0)
        {
             <h2>You haven't managed any netcafe</h2>
        }
        else
        {
            <h2>PC Manageme - @netcafes.ElementAt(0).NetCafeName</h2>
        }
    } 

    @{
        if (netcafes != null && netcafes.Count > 0)
        {

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">+ Add New PC</button>


        }
    }
    <div class="row">
       
        <div class="table-responsive">
            @{
                int i = 1;
                foreach (PC pc in pcs)
                {
                    <div class="col-xs-10" style="border: ridge; height:250px; width:300px; padding-left:0px" >
                        <ul>
                            <li>
                                <a href="#@i">PC: @i - @pc.PCName<br></a>
                                <div id="@i" class="collapse">
                                    <p>Price: @pc.Price</p>
                                    <p>Description: @pc.PCDescriptions</p>
                                    @{  foreach (NetCafe netcafe in netcafes)
                                        {
                                            if (pc.NetCafeID == netcafe.NetCafeID)
                                            {
                                                <p>Address: @netcafe.NetCafeName - @netcafe.NetCafeAddress</p>
                                            }
                                        }
                                        
                                    }
                                    @if (@pc.PCStatus == 1) {
                                        <p>Status: Available</p>
                                    }
                                    else {
                                        <p>Status: N/A</p>
                                    }
                                </div>
                                <button class="btn btn-info" onclick="location.href='/PC/edit/@pc.PCID'">Edit</button>
                                <button class="btn btn-success" onclick="deletePC(@pc.PCID)">Delete</button>
                                <script>
                                    $(document).ready(function collapse() {
                                        $('#@i').mouseover(function () {
                                            $('.collapse').collapse('show');
                                        });
                                        $('#@i').mouseout(function () {
                                            $('.collapse').collapse('hide');
                                        });
                                    })
                                </script>
                            </li>
                        </ul>
                     </div>

                    
                    i++;
                }
            }
            
        </div>
    </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New PC</h4>
            </div>
            <div class="modal-body">
                <div class="form-group" style="width:100%">
                    <label for="usr">PC Name</label>
                    <input type="text" class="form-control" id="pcName">
                    <label for="usr">Price</label>
                    <input type="text" class="form-control" id="pcPrice">
                    <label for="usr">Description</label>
                    <input type="text" class="form-control" id="pcDescription">
                    <div class="form-group">
                        <label for="sel1">NetCafe</label>
                        <select class="form-control" id="netCafeAddress">
                            <option value="-1">Select</option>
                            @{

                                foreach (NetCafe netcafe in netcafes)
                                {
                                    <option value="@netcafe.NetCafeID">@netcafe.NetCafeName - @netcafe.NetCafeAddress</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sel1">Status</label>
                        <select class="form-control" id="pcStatus">
                            <option value="1">Available</option>
                            <option value="2">N/A</option>
                        </select>
                    </div>
                </div>
                <p id="error" style="color='red'"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" onclick="addPC()">Submit</button>
            </div>
        </div>

    </div>
</div>


<script>    
    function addPC() {
        $("#error").html("");
        var name = $('#pcName').val();
        var price = $('#pcPrice').val();
        var description = $('#pcDescription').val();
        var netcafeAddress = $('#netCafeAddress option:selected').val();
        var status = $('#pcStatus option:selected').val();
        var kiemtraprice = isNaN(($('#pcPrice').val()));
        if (name == "") {
            $("#error").html("PC name must not be blank!");
            return;
        }
        if (price == "") {
            $("#error").html("Price must not be blank!");
            return;
        }
        if (kiemtraprice == true) {
            $("#error").html("Price must be number");
            return;
        }
        if (description == "") {
            $("#error").html("Description must not be blank!");
            return;
        }
        if (netcafeAddress == "-1" || netcafeAddress == "") {
            $("#error").html("You must select an address!");
            return;
        }
        if (status == "-1" || status == "") {
            $("#error").html("You must select a status!");
            return;
        }

        $.ajax({
            url: '/PC/add',
            data: {
                name: name,
                price: price,
                description: description,
                netcafeAddress: netcafeAddress,
                status: status,
            },
            error: function () {
                alert("Problem")
            },
            success: function (data) {
                alert("Add successfully")
                location.reload();

            },
            type: 'POST'
        });
        $('#myModal').modal('hide');
    }
    function deletePC(id) {
        $.ajax({
            url: '/PC/delete',
            data: {
                id: id
            },

            error: function () {
                alert("Problem")
            },
            success: function (data) {
                if (data === 'True'){
                    alert("Delete successfully")
                    location.reload();
                } else {
                    alert("Cannot delete this PC because it is in used!")
                location.reload();
            }

            },

            type: 'post'
        });

    }

    function editNetCafe(indexInArray) {
        alert(indexInArray);

    }
</script>


